<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#363161"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:gravity="right"
            android:paddingEnd="15dp"
            android:textColor="#e7b615"
            android:textSize="30sp"
            android:text=""
        />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:gravity="right"
            android:paddingEnd="15dp"
            android:textColor="#e7b615"
            android:textSize="30sp"
            android:text=""
            />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#464083">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/bAC"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/ac_button"
                android:text="AC"
                android:textColor="#e7b615"
                android:textSize="35sp"/>

            <Button
                android:id="@+id/bDel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ac_button"
                android:text="Del"
                android:textColor="#e7b615"
                android:textSize="35sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="3dp" >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" 7"
                android:textSize="25dp"
                android:background="@drawable/light_shadow"
                android:textColor="#464083" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8"
                android:textSize="25dp"
                android:background="@drawable/light_shadow"
                android:textColor="#464083" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9"
                android:textSize="25dp"
                android:background="@drawable/light_shadow"
                android:textColor="#464083" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bDiv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="/"
                android:textSize="25dp"
                android:background="@drawable/dark_shadow"
                android:textColor="#e7b615" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="3dp" >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4"
                android:textSize="25dp"
                android:background="@drawable/light_shadow"
                android:textColor="#464083" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5"
                android:textSize="25dp"
                android:background="@drawable/light_shadow"
                android:textColor="#464083" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6"
                android:textSize="25dp"
                android:background="@drawable/light_shadow"
                android:textColor="#464083" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bMulti"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="*"
                android:textSize="25dp"
                android:background="@drawable/dark_shadow"
                android:textColor="#e7b615" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="3dp" >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:textSize="25dp"
                android:background="@drawable/light_shadow"
                android:textColor="#464083" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:textSize="25dp"
                android:background="@drawable/light_shadow"
                android:textColor="#464083" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:textSize="25dp"
                android:background="@drawable/light_shadow"
                android:textColor="#464083" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bSub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:textSize="25dp"
                android:background="@drawable/dark_shadow"
                android:textColor="#e7b615" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="3dp" >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textSize="25dp"
                android:background="@drawable/zero_button"
                android:textColor="#464083" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bMode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="%"
                android:textSize="25dp"
                android:background="@drawable/zero_button"
                android:textColor="#464083" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bEqual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="="
                android:textSize="25dp"
                android:background="@drawable/light_shadow"
                android:textColor="#464083" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bAdd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+"
                android:textSize="25dp"
                android:background="@drawable/dark_shadow"
                android:textColor="#e7b615" />
        </TableRow>

    </TableLayout>

</RelativeLayout>